<div class="card card-custom card-stretch gutter-b">
    <!--begin::Header-->
    <div class="card-header border-0">
        <h3 class="card-title font-weight-bolder text-dark">Qualifications</h3>
    </div>
    <!--end::Header-->

    <!--begin::Body-->
    <div class="card-body pt-2">

        <% qualifications.each do |qual| %>
        <!--begin::Item-->
            <div class="d-flex flex-wrap align-items-center mb-10">
                <!--begin::Symbol-->
                <div class="symbol symbol-60 symbol-2by3 flex-shrink-0 mr-4">
                    <div class="symbol-label" style="background-image: url('/assets/media/stock-600x400/img-3.jpg')"></div>
                </div>
                <!--end::Symbol-->
            
                <!--begin::Title-->
                <div class="d-flex flex-column flex-grow-1 my-lg-0 my-2 pr-3">
                    
                    <a href="<%=qualification_path(qual)%>" class="text-dark-75 font-weight-bolder text-hover-primary font-size-lg"><%=qual.course_name%></a>
                    <span class="text-muted font-weight-bold font-size-sm"><%=qual.specialization%></span>
                    <span class="text-muted font-weight-bold font-size-sm"><%=qual.institute%></span>
                    <span class="text-muted font-weight-bold font-size-sm"><%=qual.course_type%>: 
                    <span class="text-primary font-weight-bold"><%=qual.grade%></span></span>
                    <span class="text-muted font-weight-bold font-size-sm">

                        <%= link_to "Certificate", rails_blob_url(qual.certificate, disposition: "attachment"), id: "download_link" if qual.certificate.present? %>
                    </span>
                </div>
                <!--end::Title-->
                <!--begin::Info-->
                <div class="d-flex align-items-center py-lg-0 py-2">
                    <div class="d-flex flex-column text-right">
                        <span class="text-muted font-weight-bolder font-size-sm"> <%=qual.date_of_passing%></span>
                        <span class="text-muted font-size-sm font-weight-bolder"><%=qual.country%> </span>
                    </div>
                </div>
                <!--end::Info-->
            </div>
        <!--end::Item-->
        <% end %>
        
    </div>
    <!--end::Body-->
</div>
<div class="card card-custom card-stretch gutter-b">
    <!--begin::Header-->
    <div class="card-header border-0">
        <h3 class="card-title font-weight-bolder text-dark">Documents</h3>
    </div>
    <!--end::Header-->
    <!--begin::Body-->
    <div class="card-body pt-0">
        <% user_docs.each do |doc| %>
            <!--begin::Item-->
            <div class="mb-6">
                <!--begin::Content-->
                <div class="d-flex align-items-center flex-grow-1">
                    <!--begin::Checkbox-->
                    <% if doc.attachment.present? %>
                        <a href="<%= rails_blob_url(doc.attachment, disposition: "attachment") %>" class="btn btn-success font-weight-bold mr-2">
                            <i class="flaticon2-download"></i> 
                        </a>
                    <% else %>
                        <a href="#" class="btn btn-danger font-weight-bold mr-2">
                            <i class="flaticon2-warning"></i> Missing
                        </a>
                    <% end %>
                    <!--end::Checkbox-->
                    <!--begin::Section-->
                    <div class="d-flex flex-wrap align-items-center justify-content-between w-100">
                        <!--begin::Info-->
                        <div class="d-flex flex-column align-items-cente py-2 w-75">
                            <!--begin::Title-->
                            <a href="<%= user_doc_path(doc) %>" class="text-dark-75 font-weight-bold text-hover-primary font-size-lg mb-1"><%= doc.doc_type %></a>
                            <!--end::Title-->
                            <!--begin::Data-->
                            <span class="text-muted font-weight-bold"><%= truncate(doc.description, length: 100) %></span>
                            <!--end::Data-->
                        </div>
                        <!--end::Info-->
                        <!--begin::Label-->
                        <% if doc.verified %>
                            <span class="label label-lg label-light-primary label-inline font-weight-bold py-4">Verified</span>
                        <% else %>
                            <span class="label label-lg label-light-warning label-inline font-weight-bold py-4">In Progress</span>
                        <% end %>
                        <!--end::Label-->
                    </div>
                    <!--end::Section-->
                </div>
                <!--end::Content-->
            </div>
            <!--end::Item-->
        <% end %>
    </div>
    <!--end: Card Body-->
</div>
